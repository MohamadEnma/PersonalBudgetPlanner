<Window x:Class="PersonalBudgetPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PersonalBudgetPlanner.Views"
        xmlns:viewModels="clr-namespace:PersonalBudgetPlanner.ViewModels"
        
        mc:Ignorable="d"
        Title="Personal Budget Planner" Height="700" Width="1050"
        Background="#FFF6F7FB" FontFamily="Segoe UI">

<Window.Resources>
    <DataTemplate DataType="{x:Type viewModels:BudgetViewModel}">
        <views:BudgetMainContent />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:ProfileViewModel}">
        <views:ProfileView />
    </DataTemplate>
</Window.Resources>

<Grid Margin="10">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <views:HeaderView Grid.Row="0" />

    <ContentControl Grid.Row="1" Content="{Binding CurrentView}" />
</Grid>
</Window>