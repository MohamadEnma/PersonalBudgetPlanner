<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryBlueColor">#2196F3</Color>
    <Color x:Key="SuccessGreenColor">#2E7D32</Color>
    <Color x:Key="BackgroundGrayColor">#F6F7FB</Color>
    <Color x:Key="CardGrayColor">#F0F0F0</Color>

    <SolidColorBrush x:Key="PrimaryBlueBrush" Color="{StaticResource PrimaryBlueColor}"/>
    <SolidColorBrush x:Key="SuccessGreenBrush" Color="{StaticResource SuccessGreenColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardGrayColor}"/>
</ResourceDictionary>