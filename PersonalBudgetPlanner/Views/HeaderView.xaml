<UserControl x:Class="PersonalBudgetPlanner.Views.HeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonalBudgetPlanner.Views"
             mc:Ignorable="d" d:DesignWidth="1000">
    <Border Background="{StaticResource CardBackgroundBrush}" Padding="15" CornerRadius="8" Margin="0,0,0,10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <StackPanel Margin="0,0,30,0">
                    <Button Content="Månadsöversikt" FontSize="10" Foreground="Gray"
                            Command="{Binding OpenMonthlyOverviewCommand}"
                            />
                   
                </StackPanel>
                <StackPanel Margin="0,0,30,0">
                    <TextBlock Text="AKTUELL BALANS" FontSize="10" Foreground="Gray"/>
                    <TextBlock Text="{Binding NetBalance, StringFormat={}{0:C}}" 
                               FontSize="22" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                <Button Content="&lt;" Command="{Binding PreviousMonthCommand}" 
                        Style="{StaticResource PrimaryButtonStyle}" Width="50" Margin="5"/>

                <StackPanel VerticalAlignment="Center" Margin="15,0">
                    <TextBlock Text="{Binding CurrentMonthDisplay}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentYearDisplay}" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                </StackPanel>

                <Button Content="&gt;" Command="{Binding NextMonthCommand}" 
                        Style="{StaticResource PrimaryButtonStyle}" Width="50" Margin="5"/>
            </StackPanel>

            <Button Grid.Column="3" Content="👤 Profil" 
                    Command="{Binding OpenProfileCommand}" 
                    Style="{StaticResource PrimaryButtonStyle}" Width="60" Padding="5"/>
        </Grid>
    </Border>
</UserControl>
